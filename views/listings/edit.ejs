<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit this Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-control">Title</label>
                    <input class="form-control" name="listing[title]" value="<%= listing.title %>" type="text" required>
                    <div class="invalid-feedback">Please enter valid Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-control">Description</label>
                    <textarea class="form-control" name="listing[description]" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short Description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-control">Image</label>
                    <input class="form-control" name="listing[image][url]" value="<%= listing.image.url %>"type="text">
                    <div class="invalid-feedback">Please add a valid image url</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-control">Price</label>
                    <input class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" required>
                    <div class="invalid-feedback">Price should be valid</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-7">
                        <label for="location" class="form-control">Location</label>
                        <input class="form-control" name="listing[location]" value="<%= listing.location %>" type="text" required>
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <div class="mb-3 col-md-5">
                        <label for="country" class="form-control">Country</label>
                        <input class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
