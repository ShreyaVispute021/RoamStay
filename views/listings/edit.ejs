<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit this Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-control">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" type="text">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-control">Description</label>
                    <textarea name="listing[description]" ><%= listing.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-control">Image</label>
                    <input name="listing[image]" value="<%= listing.image %>" type="text">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-control">Price</label>
                    <input name="listing[price]" value="<%= listing.price %>" type="number">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-7">
                        <label for="location" class="form-control">Location</label>
                        <input name="listing[location]" value="<%= listing.location %>" type="text">
                    </div>
                    <div class="mb-3 col-md-5">
                        <label for="country" class="form-control">Country</label>
                        <input name="listing[country]" value="<%= listing.country %>" type="text">
                    </div>
                </div>
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>
